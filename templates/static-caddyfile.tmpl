# Caddyfile generated by MP3
# https://github.com/JonasGruenwald/mp3

{{if .RedirectWWW}}
# Redirect www to root domain
# Reference: https://caddyserver.com/docs/caddyfile/patterns#redirect-www-subdomain
www.{{ .Domain }} {
	redir {{ .Domain }}{uri}
}

{{end}}
# Static File server
# Reference: https://caddyserver.com/docs/caddyfile/patterns#static-file-server
{{ .Domain }} {
	root * {{ .StaticPath }}
	encode gzip
	file_server
}
